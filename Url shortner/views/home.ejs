<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if(locals.id){%>
        <p>Url generated : <a href="http://localhost:4000/url/<%= id%>">http://localhost:4000/url/<%= id %></a></p>
    <%}%>
    <h1>Url Shortner</h1>
    <form method="post" action="/url">
        <label for="">Enter your Url </label>
        <input placeholder="enter url" name="redirectURL" type="text" name="" id="">
        <button type="submit">submit form</button>
    </form>

    <% if(locals.Urls){%>

        <table>
            <thead>
                <th>S.No</th>
                <th>ShortId</th>
                <th>Redirect URL</th>
                <th>Clicks</th>
            </thead>

            <tbody>
                <% Urls.forEach((element,index) => { %>
                    <tr>
                    <td><%=index+1 %></td>
                    <td><%= element.shortId%></td>
                    <td><%= element.redirectURL %></td>
                    <td><%= element. VisitHistory.length %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

   <% }  %>
   
</body>
</html>